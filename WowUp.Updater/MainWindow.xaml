<Window x:Class="WowUp.Updater.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WowUp.Updater"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Initialized="Window_Initialized"
        ContentRendered="Window_ContentRendered"
        Title="MainWindow" Height="450" Width="450">

    <Window.Background>
        <ImageBrush ImageSource="Assets/wowbg-5.png" Stretch="UniformToFill"></ImageBrush>
    </Window.Background>
    <StackPanel VerticalAlignment="Center">
        <Image Source="Assets/wowup_logo_512np.png" Width="200"></Image>
        <!--<TextBlock HorizontalAlignment="Center" Foreground="White" FontSize="20">WowUp</TextBlock>-->
        <TextBlock HorizontalAlignment="Center" Foreground="WhiteSmoke" FontStyle="Italic" FontSize="16">Updating...</TextBlock>
    </StackPanel>
</Window>
